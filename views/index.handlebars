    <!-- add class dropdown -->
    <div id="addclassdropdown">
       <center> <div id="form">
         <form method="post" action="/user/addClass">
            <select name="values">
              {{#each classList}}
                <option value="{{this.class_id}}, {{this.num}}">
                  {{this.num}}
                </option>
              {{/each}}
            </select><br>
            <button class="btn">Add Class</button>
         </form>
      </center>
    </div>
  </div>


  <div class="content"></div>
    <div id="cont">
      <div id="tp">
        {{#if classes.length}}
        <!-- LOOP BEGINS -->
        {{#each classes}}
        <!-- RENDERS UNIQUE CLASS DIVS -->
          <ul id="class{{@index}}">
            <div id="classname">
              <p1><a href="/class/{{this.class_id}}">{{this.num}}</a></p1>
            </div>
            <i id="dropdown" class="fa fa-chevron-down"></i>
          </ul>
         <!-- END --> 
          <!-- RENDERS EXTENSION FOR EACH CLASS DIV -->
          <div id="extend{{@index}}">
          <ul>
            <li>
              <i id="cap" class="icon fa fa-graduation-cap fa-5x"></i>
              <i id="pencil" class="icon fa fa-pencil-square-o fa-5x"></i>
              <i id="calendar" class="icon fa fa-calendar fa-5x"></i>
              <i id="event" class="icon fa fa-plus-square-o fa-5x"></i>
            </li>
          </ul>
        </div>
        <!-- END --> 
        {{/each}}
        <!-- LOOP ENDS -->
        {{/if}}
